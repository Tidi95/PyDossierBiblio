#!/usr/bin/env python3
from biblio import commandes
from biblio import bibliotheque
from biblio import livre
def main():
	bibli = bibliotheque.Bibliotheque()
	while True:
		entr√©e = input("\033[34m\n\nComment pourrais-je vous aider(entrez {M} pour voir le menu) ? \n\n\033[0m").upper()
		if entr√©e == "Q":
			print("Au revoir üëã")
			return False
		elif entr√©e == "M":
			commandes.affiche_menu()
		elif entr√©e == "LG":
			commandes.liste_genre(bibli)
		elif entr√©e == "LL":
			commandes.liste_livre(bibli)
		elif entr√©e == "NG":
			commandes.nouveau_genre(bibli)
		elif entr√©e == "NL":
			livr = livre.Livre()
			commandes.nouveau_livre(bibli,livr)
		elif entr√©e == "SG":
			commandes.sup_genre(bibli)
		elif entr√©e == "SL":
			commandes.sup_livre(bibli)
		else:
			print("je n'ai pas compris votre reponse ")

main()
